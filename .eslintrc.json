{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "next/core-web-vitals",
        "next"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "react/prop-types": [0],
        "jsx-quotes": ["error", "prefer-double"],
        "no-trailing-spaces": ["error"],
        "import/prefer-default-export": 0,
        "no-extra-semi": 0,
        "@typescript-eslint/no-extra-semi": 0,
        "import/no-unresolved": [
            2, 
            { "caseSensitive": false }
         ]  
    }
}
